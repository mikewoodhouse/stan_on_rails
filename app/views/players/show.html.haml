%h1 Player Season History
%h2
  = player_name(@player)
%table
  %thead{bgcolor: '#d9b2b2'}
    %th Year
    %th Matches
    %th Innings
    %th NotOut
    %th Highest
    %th Runs
    %th Bat Avg
    %th Fifties
    %th Hundreds
    %th Fours
    %th Sixes
    %th Overs
    %th Maidens
    %th Conceded
    %th Wickets
    %th Bowl Avg
    %th 5+ wkt inns
    %th Caught
    %th Stumped
    %th CaughtWkt
    %th Captain
    %th KeptWicket
  %tbody
    - @performances.each do |perf|
      %tr{class: cycle('odd', 'even')}
        %td.number= perf.year == 0 ? 'Total' : perf.year
        %td.number= perf.matches
        %td.number= perf.innings
        %td.number= perf.notout
        %td.number= perf.high_score
        %td.number= perf.runsscored
        %td.number= number_with_precision(perf.bat_avg, precision: 2)
        %td.number= perf.fifties
        %td.number= perf.hundreds
        %td.number= perf.fours
        %td.number= perf.sixes
        %td.number= perf.overs_and_balls
        %td.number= perf.maidens
        %td.number= perf.runs
        %td.number= perf.wickets
        %td.number= number_with_precision(perf.bowl_avg, precision: 2)
        %td.number= perf.fivewktinn
        %td.number= perf.caught
        %td.number= perf.stumped
        %td.number= perf.caughtwkt
        %td.number= perf.captain
        %td.number= perf.keptwicket
